configuration {
    modi:               "drun,emoji,calc";
    font:               "HarmonyOS Sans SC Bold 13, Noto Color Emoji 13";
    show-icons:         true;
    icon-theme:         "Reversal-dark";
    display-drun:       "";
    drun-display-format:"{name}";
    sidebar-mode:       false;
    kb-row-up:          "Up,Alt+k";
    kb-row-down:        "Down,Alt+j";
}

@theme "/dev/null"

/* ================== Colors ================== */
* {
    bg:      rgba(35, 37, 48, 0.75);
    fg:      rgba(232, 232, 211, 0.90);
    accent:  #687363;
    button:  rgba(49, 52, 74, 0.60);

    background-color: @bg;
    text-color:       @fg;
}

/* ================== Window ================== */
window {
    width: 36%;
    padding: 28px;
    border-radius: 8px;
    background-color: @bg;
}

/* ================== Input Bar ================== */
inputbar {
    children: [ prompt, entry ];
    background-color: @button;
    border-radius: 8px;
    padding: 10px 14px;
    spacing: 8px;
}

prompt {
    enabled: true;
    font: "HarmonyOS Sans SC Bold 13";
    background-color: transparent;
}

entry {
    placeholder: "Search";
    placeholder-color: @fg;
    background-color: transparent;
    expand: true;
    padding: 2px 0px;
}

/* ================== Layout ================== */
mainbox {
    children: [ inputbar, listview ];
    spacing: 14px;
}

/* ================== List ================== */
listview {
    columns: 1;
    lines: 7;
    dynamic: true;
    layout: vertical;
    spacing: 8px;
}

/* ================== Elements ================== */
element {
    padding: 6px 10px;
    border-radius: 6px;
}

element-icon {
    size: 22px;
    vertical-align: 0.5;
}

element-text {
    expand: true;
    vertical-align: 0.5;
}

/* Inherit colors */
element-text, element-icon {
    background-color: inherit;
    text-color: inherit;
}

/* ================== Selection ================== */
element selected {
    background-color: @button;
}
